<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tab_touch_pad"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1">
    <LinearLayout
   		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<ScrollView
	   		android:layout_width="fill_parent"
			android:layout_height="fill_parent">  
		</ScrollView>
	</LinearLayout>
	   
	<com.scientificsoft.iremote.android.iremote.ui.controls.ControlAreaGL
		android:id="@+id/screenshot_view"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent">
	</com.scientificsoft.iremote.android.iremote.ui.controls.ControlAreaGL>
	
	<LinearLayout
		android:id="@+id/touch_pad_zoom_panel" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_centerHorizontal="true" 
		android:layout_alignParentTop="true" 
		android:layout_marginTop="5dp">
		<Button 
			android:layout_width="wrap_content" 
			android:text="-"						
			android:textSize="12dp" 
			android:id="@+id/zoom_out" 
			android:layout_height="wrap_content" 
			android:background="@drawable/button_normal_selector" 
			android:textColor="@color/text" 
			android:layout_marginRight="2dp" 
			android:layout_marginLeft="2dp" 
			android:minWidth="50dp">
		</Button>
		<Button 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="1:0" 
			android:textSize="12dp" 
			android:background="@drawable/button_normal_selector" 
			android:textColor="@color/text" 
			android:layout_marginRight="2dp" 
			android:layout_marginLeft="2dp" 
			android:minWidth="50dp" 
			android:id="@+id/flush_zoom">
		</Button>
		<Button 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="+" 
			android:textSize="12dp" 
			android:background="@drawable/button_normal_selector" 
			android:textColor="@color/text" 
			android:layout_marginRight="2dp" 
			android:layout_marginLeft="2dp" 
			android:minWidth="50dp" 
			android:id="@+id/zoom_in">
		</Button>		
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_alignParentTop="true" 
		android:layout_alignParentRight="true">
		<Button 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:textSize="12dp" 
			android:id="@+id/toggle_keyboard" 
			android:background="@drawable/button_normal_selector"
			android:drawableTop="@drawable/touchpad_keyboard"
			android:lines="0" 
			android:textColor="@color/text"
			android:minWidth="50dp"
			android:layout_margin="5dp"/>
	</LinearLayout>
	  
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal" 
		android:layout_centerHorizontal="true" 
		android:layout_alignParentBottom="true">
		<com.scientificsoft.iremote.android.iremote.ui.controls.MouseButton 
			android:layout_width="wrap_content" 
			android:text="Left" 
			android:textSize="12dp" 
			android:id="@+id/mouse_left" 
			android:layout_height="wrap_content" 
			android:background="@drawable/button_normal_selector" 
			android:textColor="@color/text" 
			android:layout_marginRight="2dp" 
			android:layout_marginLeft="2dp"
			android:layout_marginBottom="5dp"  
			android:minWidth="80dp"
			android:minHeight="40dp"/>
		<com.scientificsoft.iremote.android.iremote.ui.controls.MouseButton
			android:id="@+id/mouse_middle" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="Middle" 
			android:textSize="12dp" 
			android:background="@drawable/button_normal_selector" 
			android:textColor="@color/text" 
			android:layout_marginRight="2dp" 
			android:layout_marginLeft="2dp" 
			android:layout_marginBottom="5dp"
			android:minWidth="80dp"
			android:minHeight="35dp"/>
		<com.scientificsoft.iremote.android.iremote.ui.controls.MouseButton
			android:id="@+id/mouse_right" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="Right" 
			android:textSize="12dp" 
			android:background="@drawable/button_normal_selector" 
			android:textColor="@color/text" 
			android:layout_marginRight="2dp" 
			android:layout_marginLeft="2dp" 
			android:layout_marginBottom="5dp"
			android:minWidth="80dp"
			android:minHeight="35dp"/>	
	</LinearLayout>			    
</RelativeLayout>   
